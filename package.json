{
  "name": "spectrabox",
  "version": "1.0.0",
  "description": "Cross-platform Node.js web application for audio device management on Raspberry Pi",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern='unit-fast.test.js'",
    "test:integration": "jest --testPathPattern='integration.test.js|server.test.js|spectrum-analyzer-integration.test.js'",
    "test:e2e": "jest --testPathPattern='e2e-|comprehensive-integration.test.js'",
    "test:performance": "jest --testPathPattern='performance.test.js|pi-performance.test.js'",
    "test:cross-platform": "jest --testPathPattern='cross-platform'",
    "test:audio": "jest --testPathPattern='audio-device'",
    "test:network": "jest --testPathPattern='network'",
    "test:security": "jest --testPathPattern='security'",
    "test:accessibility": "jest --testPathPattern='accessibility'",
    "test:all": "jest --coverage",
    "test:comprehensive": "node test/test-runner.js",
    "test:validate": "node test/test-validation.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "raspberry-pi",
    "audio",
    "kiosk",
    "spectrum-analyzer",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^22.15.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
